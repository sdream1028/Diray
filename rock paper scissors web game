<!DOCTYPE html>
<html>

<head>
    <title>剪刀石頭布遊戲</title>
</head>

<body>
    <p>請選擇 剪刀 石頭 布</p>
    <button onclick="
            const randomNum = Math.random()*3;  // Math.random() 隨機 0~1 之間的數字, *3 等於 0 <= Num < 3
            let computerChoice = '';
            console.log(randomNum);
            if (0 <= randomNum && randomNum < 1) {
                computerChoice = '剪刀';
            } else if (1 <= randomNum && randomNum < 2) {
                computerChoice ='石頭';
            } else {
                computerChoice = '布';
            } 

            if (computerChoice === '剪刀') {
                alert(`你出剪刀，電腦出${computerChoice}，此局平手！`);
            } else if (computerChoice === '石頭') {
                alert(`你出剪刀，電腦出${computerChoice}，此局你輸了！`);
            } else {
                alert(`你出剪刀，電腦出${computerChoice}，此局你贏了！`);
            }
        ">剪刀</button>

    <button onclick="
        const randomNum1 = Math.random()*3;  // Math.random() 隨機 0~1 之間的數字, *3 等於 0 <= Num < 3
        let computerChoice1 = '';
        console.log(randomNum1);
        if (0 <= randomNum1 && randomNum1 < 1) {
            computerChoice1 = '剪刀';
        } else if (1 <= randomNum1 && randomNum1 < 2) {
            computerChoice1 ='石頭';
        } else {
            computerChoice1 = '布';
        } 

        if (computerChoice1 === '剪刀') {
            alert(`你出石頭，電腦出${computerChoice1}，此局你贏了！`);
        } else if (computerChoice1 === '石頭') {
            alert(`你出石頭，電腦出${computerChoice1}，此局平手！`);
        } else {
            alert(`你出石頭，電腦出${computerChoice1}，此局你輸了！`);
        }
    ">石頭</button>

    <button onclick="
        const randomNum2 = Math.random()*3;  // Math.random() 隨機 0~1 之間的數字, *3 等於 0 <= Num < 3
        let computerChoice2 = '';
        console.log(randomNum2);
        if (0 <= randomNum2 && randomNum2 < 1) {
            computerChoice2 = '剪刀';
        } else if (1 <= randomNum2 && randomNum2 < 2) {
            computerChoice2 ='石頭';
        } else {
            computerChoice2 = '布';
        } 

        if (computerChoice2 === '剪刀') {
            alert(`你出布，電腦出${computerChoice2}，此局你輸了！`);
        } else if (computerChoice2 === '石頭') {
            alert(`你出布，電腦出${computerChoice2}，此局你贏了！`);
        } else {
            alert(`你出布，電腦出${computerChoice2}，此局平手！`);
        }
    ">布</button>

    <script>

    </script>
</body>

</html>
